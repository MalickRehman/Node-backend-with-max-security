# Production Environment Variables
# IMPORTANT: Never commit actual production secrets to version control

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Application
APP_NAME=Nexus UI Backend
APP_VERSION=1.0.0
API_PREFIX=/api/v1
BASE_URL=https://api.yourdomain.com

# Security - CHANGE ALL SECRETS IN PRODUCTION
JWT_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-MIN-32-CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE-THIS-TO-DIFFERENT-SECURE-RANDOM-STRING-MIN-32-CHARS
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-MIN-32-CHARS
SESSION_MAX_AGE=1800000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# CSRF Protection
CSRF_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-MIN-32-CHARS

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Database - MongoDB (Production)
MONGODB_URI=mongodb://admin:SECURE_PASSWORD@mongodb:27017/nexus_ui_db?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_NAME=nexus_ui_db
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MONGODB_POOL_SIZE=20

# Redis (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
REDIS_DB=0
REDIS_TLS=false

# Email (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# OAuth (Production)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ClamAV Antivirus
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=30d

# Encryption
ENCRYPTION_KEY=CHANGE-THIS-32-CHAR-KEY-EXACTLY
ENCRYPTION_ALGORITHM=aes-256-gcm

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=Nexus UI
TWO_FACTOR_ISSUER=YourDomain

# Security Headers
HSTS_MAX_AGE=31536000
CSP_DIRECTIVES=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';

# API Keys
API_KEY_SALT=CHANGE-THIS-SECURE-RANDOM-SALT

# Monitoring & Analytics
SENTRY_DSN=YOUR_SENTRY_DSN
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_GRAPHQL=false
ENABLE_2FA=true
ENABLE_OAUTH=true

# Timeouts
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# Bcrypt
BCRYPT_ROUNDS=12

# PM2
PM2_INSTANCES=max
