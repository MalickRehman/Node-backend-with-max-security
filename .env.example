# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Application
APP_NAME=Nexus UI Backend
APP_VERSION=1.0.0
API_PREFIX=/api/v1
BASE_URL=http://localhost:5000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32-chars
SESSION_MAX_AGE=1800000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# CSRF Protection
CSRF_SECRET=your-super-secret-csrf-key-change-this-in-production-min-32-chars

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/nexus_ui_db
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_NAME=nexus_ui_db
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# Email (Optional - for password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@nexusui.com

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ClamAV Antivirus (Optional - for malware scanning)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production
ENCRYPTION_ALGORITHM=aes-256-gcm

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=Nexus UI
TWO_FACTOR_ISSUER=NexusUI

# Twilio (for SMS/WhatsApp 2FA)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# Security Headers
HSTS_MAX_AGE=31536000
CSP_DIRECTIVES=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';

# API Keys (if needed for external services)
API_KEY_SALT=your-api-key-salt-change-in-production

# Monitoring & Analytics (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_2FA=true
ENABLE_OAUTH=false

# Timeouts
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# Bcrypt
BCRYPT_ROUNDS=12
